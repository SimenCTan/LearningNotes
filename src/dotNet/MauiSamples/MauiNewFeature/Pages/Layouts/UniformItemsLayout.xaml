<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauiNewFeature.Pages.Layouts.UniformItemsLayout"
             Title="UniformItemsLayout">
    <VerticalStackLayout>
        <toolkit:UniformItemsLayout MaxRows="1" MaxColumns="4" Margin="10">
            <Label Text="Red" BackgroundColor="Red" Margin="0,0,10,0" />
            <Label Text="Green" BackgroundColor="Green" />
            <Label Text="Blue" BackgroundColor="Blue" />
            <Label Text="Yellow" BackgroundColor="Yellow" />
        </toolkit:UniformItemsLayout>
    </VerticalStackLayout>
</ContentPage>
