@page "/counter/{routeParameter?}"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>
<span class="box-decoration-slice bg-gradient-to-r from-indigo-600 to-pink-500 text-blue px-2">
    hello world
</span>
<br>
<span class="box-decoration-clone bg-gradient-to-r from-indigo-600 to-pink-500 text-blue px-2">
    hello world
</span>
<p role="status">Current count: @currentCount</p>

<button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
@onclick="IncrementCount">
Click me
</button>

@code {
    private int currentCount = 0;

    [Parameter]
    public string? RouteParameter{get;set;}

    private void IncrementCount()
    {
        Console.WriteLine(RouteParameter);
        currentCount++;
    }
}
